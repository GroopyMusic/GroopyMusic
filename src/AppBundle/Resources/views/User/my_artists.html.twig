{% extends "base.html.twig" %}

{% block body %}
    <div class="container">
        <h3 class="text-center mb-4">{{ 'my_artists.title'|trans|raw }}</h3>
            <p>
                {{ 'my_artists.intro'|trans|raw }}
            </p>

            <div class="text-center mb-3">
                {% if available_artist %}
                    <a class="btn btn-primary" href="{{ path('user_new_contract_artist_temp') }}">{{ 'my_artists.new_event'|trans|raw }}</a>
                {% endif %}
                <a class="btn btn-primary mt-2 mt-md-0" href="{{ path('user_new_artist') }}">{{ 'my_artists.new_artist'|trans|raw }}</a>
            </div>

            {% if not available_artist and artists is not empty %}
                <p class="p-info mt-3">
                    {{ 'my_artists.no_available_artist'|trans|raw }}
                </p>
            {% endif %}

            {% if artists is not empty %}
                <div class="row">
                    {% for artist in artists %}
                        {% include "AppBundle:Public/Card:artist.html.twig" with {'bgwhite': true} %}
                    {% endfor %}
                </div>
            {% endif %}
    </div>
{% endblock %}