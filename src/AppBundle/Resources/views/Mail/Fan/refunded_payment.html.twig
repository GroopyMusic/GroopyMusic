{% extends 'AppBundle:Mail:baseEmailLayout.html.twig' %}
{% autoescape false %}
    {% spaceless %}
        {% block title %}{{ subject }}{% endblock %}

        {% block content %}
            {{ email_content('payment.refunded', {
                'amount': payment.amount,
                'date': payment.date|date('d/m/Y H:i:s')
            })|raw }}
        {% endblock %}
    {% endspaceless %}
{% endautoescape %}