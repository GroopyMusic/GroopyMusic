{% block style %}
    <style type="text/css">
        .header {
            text-align: center;
            color: #ea900c;
            font-weight: bold;
        }

        #content {
            margin-left: 20px;
        }

        h1 {
            text-align:center;
            color: #ea900c;
        }
        td, th {
            padding: 5px 10px;
        }
        .footer {
            background-color: #a2d1e6;
            border-top: 3px solid black;
            width: 100%;
            padding: 20px 20px;
            color: black;
        }
        .footer p {
            margin: 0 auto;
            text-align:center;
            color: white;
        }

        a, a:visited {
            color: inherit;
        }

        .text-center {
            text-align: center;
        }

        .text-right {
            text-align: right;
        }

        .text-white {
            color: white;
        }

        .text-secondary {
            color: #4a4b4d;
        }

        .text-bold {
            font-weight: bold;
        }

        {% block additional_styles %}
        {% endblock %}
    </style>
{% endblock %}

{% block page %}
    <page {% block page_margins %}backtop="25mm" backbottom="30mm" backleft="10mm" backright="10mm"{% endblock %}>
        {% block header %}
            <page_header>
                <div class="header">
                    {% block header_content %}
                        <img src="{{ absolute_url(asset('yb/images/logo/logo-short.png')) }}" height="100" alt="Ticked-it!" />
                    {% endblock %}
                </div>
            </page_header>
        {% endblock %}
        {% block footer %}
            <page_footer>
                <div class="footer">
                    {% block footer_content %}
                        <p>
                            https://ticked-it.be - <img src="{{ absolute_url(asset('yb/images/logo.png')) }}" height="35" /> - info@ticked-it.be
                        </p>
                    {% endblock %}
                </div>
            </page_footer>
        {% endblock %}

        {% block content %}
        {% endblock %}
    </page>
{% endblock %}