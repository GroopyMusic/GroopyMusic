{% extends "base.html.twig" %}

{% set artist = contract.artist %}

{% set og_src = absolute_url(asset('images/contract-card-default.jpg')) %}

{% set photos = artist.allPhotos %}

{% if photos is not empty %}
    {% set og_src = absolute_url(asset(artist.webPath(photos|first))) %}
{% endif %}

{% set artists_str = '' %}
{% for artist in contract.allArtists %}
    {% if not loop.first and loop.last %}
         {% set artists_str = artists_str ~ ' & '%}
    {% elseif not loop.first %}
        {% set artists_str = artists_str ~ ', '%}
    {% endif %}
    {% set artists_str = artists_str ~ artist.artistname %}
{% endfor %}
{% block description_part_1 %}{{ 'meta_description_event'|trans({'%artists%': artists_str}) }}{% endblock %}

{% block open_graph %}
    <meta property="og:title"
          content="{{ contract.getTitle }}"/>
    <meta property="og:type" content="article"/>
    <meta property="og:url"
          content="{{ url(app.request.attributes.get('_route'), app.request.attributes.get('_route_params')) }}"/>
    <meta property="og:image" content="{{ og_src }}"/>
{% endblock %}

{% set owns = app.user is not null ? app.user.owns(contract.artist) : false %}
{% set state = contract.state %}

{% set first_counterpart = contract.firstCounterPart %}

{% set image_url = contract.photo is not null ? contract.webPath(contract.photo) : 'images/live/live-1.jpg' %}

{% block header_attributes %}id="home" class="masthead small position-relative" style="background-image:url('{{ absolute_url(asset(image_url)) }}')"{% endblock %}

{% block header_header %}
    <div class="container justify-content-center text-white align-items-center text-center position-relative">
        <h2 class="text-bold">{{ contract.getTitle }}</h2>
        <p>{{ contract.getDescription }}</p>
    </div>
    <div class="text-center">
        <a class="scroll btn btn-outline-primary" href="#tickets">Tickets</a>
    </div>
    <div class="separating-waves high prior"></div>
    <div class="separating-waves colored big low prior"></div>
{% endblock %}

{% block body %}

    <section class="container-fluid">
        <div class="row">
            <div class="col-12 col-md-8 offset-md-2">

            </div>
        </div>

        {% if state not in contract.uncrowdableStates and contract.isLastSellingDate %}
            <p class="p-info"><img width="70" class="um-icon float-left float-md-none d-none d-sm-inline-block"
                                   src="{{ asset('images/icons/artist.png') }}"/>{{ 'event.lastday.tickets'|trans|raw }}
            </p>
        {% elseif state not in contract.successfulStates and contract.isDeadlineDate %}
            <p class="p-info"><img width="70" class="um-icon float-left d-none d-sm-inline-block"
                                   src="{{ asset('images/icons/artist.png') }}"/>{{ 'event.lastday.deadline'|trans({'%artist%': artist.artistname})|raw }}
            </p>
        {% endif %}

        {% for promo in contract.currentPromotions if not contract.inTestPeriod %}
            <p class="p-promo mt-3">{{ 'event.promo'|trans({'%end_date%': promo.endDate|date('d/m/Y'), '%nb_organic_needed%': promo.nbOrganicNeeded, '%nb_promotional%': promo.nbPromotional})|raw }}</p>
        {% endfor %}
        {% set max_tickets = contract.maxTickets %}
        {% set tickets_left = contract.totalNbAvailable %}

    </section>
    <section class="container-fluid">
        <div class="row mt-4">
            <div class="col-12 col-lg-8">
                <div class="col-12 content-box">
                    <div class="content-box-header">
                        <h3>{{ 'event.lineup.title'|trans|raw }}</h3>
                    </div>
                    <div class="content-box-content">
                        {% for day in contract.festivalDays %}
                            <h4>{{ ('Days ' ~ day.date|date('w'))|trans }} {{ day.date|date('j') }} {{ ('months.' ~ day.date|date('m'))|trans }}</h4>
                            <table class="content-box-table">
                                <tbody>
                                <tr>
                                    <td class="contract-info-title">{{ 'doors_opening' }}</td>
                                    <td>
                                        {{ day.date|date('H:i') }}
                                    </td>
                                </tr>

                                {% if contract.knownLineup %}
                                    {% for performance in day.performances %}
                                            <tr>
                                                <td class="contract-info-title">{{ performance.time|date('H:i') }}</td>
                                                <td>
                                                    <a href="{{ path('artist_profile', {'id': performance.artist.id, 'slug': performance.artist.slug}) }}">{{ performance.artist.artistname }}</a>
                                                </td>
                                            </tr>
                                    {% endfor %}
                                {% else %}
                                    <tr>
                                        <td class="contract-info-title">Artistes</td>
                                        <td>{% for performance in day.performances %}{% if not loop.first %} - {% endif %}<a href="{{ path('artist_profile', {'id': performance.artist.id, 'slug': performance.artist.slug}) }}">{{ performance.artist.artistName }}</a>{% endfor %}</td>
                                    </tr>
                                {% endif %}
                                </tbody>
                            </table>
                        {% endfor %}
                    </div>
                </div>
            </div>

            {% if not contract.hasNoDefinedHall %}
                <div class="col-12 col-lg-4 content-box">
                    <div class="content-box-header">
                        <h3>{{ 'event.hall.known'|trans|raw }}</h3>
                    </div>

                    <div class="content-box-content">
                        <div id="carouselPotentialHalls" class="carousel slide" data-ride="carousel">
                            <div class="carousel-inner">
                                {% set i = 0 %}
                                {% for hall in contract.festivalHalls if hall is not null %}
                                    <div class="carousel-item {% if loop.first %}active{% endif %}">
                                        {% include 'AppBundle:Public/Card:hall.html.twig' with {'xs': 12, 'md':12, 'no_rotation_hall':true} %}
                                    </div>
                                    {% set i = i + 1 %}
                                {% endfor %}
                            </div>
                            {% if i > 1 %}
                                <a class="carousel-control-prev" href="#carouselPotentialHalls" role="button"
                                   data-slide="prev">
                                        <span class="carousel-control-prev-icon rounded-circle btn-primary bg-primary p-1"
                                              aria-hidden="true"></span>
                                    <span class="sr-only">Previous</span>
                                </a>
                                <a class="carousel-control-next" href="#carouselPotentialHalls" role="button"
                                   data-slide="next">
                                        <span class="carousel-control-next-icon rounded-circle btn-primary bg-primary p-1"
                                              aria-hidden="true"></span>
                                    <span class="sr-only">Next</span>
                                </a>
                            {% endif %}
                        </div>
                    </div>
                </div>
            {% endif %}
            </div>
        </div>
    </section>
    <section class="container-fluid bg-body-strong">
        <div class="content-box">
            <div class="content-box-content text-center">
                <div class="col-12 content-box-col">
                            <span class="contract-info-title pr-2">
                                {{ 'event.infos.state'|trans|raw }}
                            </span>
                    <span class="contract-info-content pr-1">
                                {{ ('event.'~state)|trans|raw }}
                            </span>
                    {% if state not in contract.uncrowdableStates %}
                        <span class="text-positive um-semi-bold"><img class="green-check"
                                                                      src="{{ asset('images/green-check.png') }}"/>{{ 'event.stillselling'|trans|raw }}</span>
                    {% endif %}
                </div>

                <div class="col-12 row equal content-box-row">
                    <div class="col-12 col-md-4 content-box-col">
                        <div class="contract-info-title{% if contract.isInTestPeriod %} invisible{% endif %}">
                            {{ 'event.infos.validation_date'|trans|raw }}
                        </div>
                        <div class="contract-info-content{% if contract.isInTestPeriod %} invisible{% endif %}">
                            {{ contract.dateEnd|date('d/m/Y') }}
                        </div>
                    </div>
                    <div class="col-12 col-md-4 content-box-col">
                        <div class="contract-info-title">
                            {{ 'event.infos.tickets_sold'|trans|raw }}
                        </div>
                        <div class="contract-info-content">
                            {{ contract.totalBookedTicketsMajored }}
                        </div>
                    </div>

                    <div class="col-12 col-md-4 content-box-col">
                        <div class="contract-info-title">
                            {{ 'event.infos.tickets_left'|trans|raw }}

                        </div>
                        <div class="contract-info-content">
                            {{ max(0, tickets_left) }}
                        </div>
                    </div>
                </div>

                <div class="col-12 content-box-col">
                    {% if not contract.isValidatedBelowObjective %}
                        <span class="contract-info-title pr-2">
                                 {{ 'event.infos.tickets_objective'|trans|raw }}
                            </span>
                        <span class="contract-info-content">
                                {{ contract.step.minTickets }}
                            </span>
                    {% endif %}
                    {% set progress_100 = state in contract.successfulStates ? 100 : contract.percentObjective %}
                    <div class="progress">
                        <div class="progress-bar{% if state in contract.successfulStates %} successful-progress-bg{% endif %}"
                             style="padding-left: 1rem;width:{{ progress_100 }}%"></div>
                    </div>
                    <div class="text-right small font-weight-bold text-uppercase{% if state in contract.successfulStates %} successful-progress-text{% else %} text-primary{% endif %}">
                        {% if state in contract.successfulStates %}{{ 'confirmed'|trans|raw }}{% else %}{{ progress_100 }}%{% endif %}
                    </div>
                </div>
            </div>
        </div>

    </section>

    <section class="container-fluid" id="tickets">
        <div class="content-box">
            <div class="content-box-header">
                <h3>{{ 'event.buy_tickets.title'|trans|raw }}</h3>
            </div>

            <div class="content-box-content p-2">
                {% if state not in contract.uncrowdableStates %}
                    {% form_theme form ':Form:bootstrap_4_layout.html.twig' %}

                    {{ form_start(form) }}

                    {% for purchase in form.purchases %}
                        {% set counterpart = purchase.vars.value.counterpart %}
                        <div class="counterpart-form border p-2">

                            <div class="form-group form-row">
                                {{ form_errors(purchase) }}

                                <div class="col-8">
                                    <label class="counterpart-label">{{ counterpart.name }}</label>
                                </div>
                                <div class="col-4 counterpart-price">
                                    {{ counterpart.price }} €
                                </div>
                                <div class="col-8">{{ counterpart.getDescription|raw }}</div>
                                <div class="col-4">
                                    <div class="container px-0">
                                        <div class="count-input space-bottom" data-price="{{ counterpart.price }} €">
                                            <a class="incr-btn" data-action="decrease" href="#">–</a>
                                            {{ form_widget(purchase.quantity) }}
                                            <a class="incr-btn" data-action="increase"
                                               data-max="{{ contract.nbAvailable(counterpart) }}"
                                               href="#">&plus;</a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            {% if counterpart.potentialArtists is not empty %}
                                <div class="select2-artists">
                                    Si vous venez en particulier pour un ou plusieurs artiste(s), mentionnez-le(s) :
                                    {{ form_widget(purchase.artists) }}
                                </div>
                            {% endif %}
                        </div>
                    {% endfor %}
                    {#{{ form_row(form.user_rewards) }}
                    <div id="user_reward-error"><span
                                class="danger danger-color">{{ 'event.buy_tickets.to_much_reduction'|trans|raw }}</span>
                    </div>
                    #}
                    <div class="text-right">
                        TOTAL : <span id="cart-total">0</span> €
                        {{ form_widget(form.submit) }}
                    </div>

                    {{ form_end(form) }}
                {% else %}
                    <p class="text-uppercase small font-weight-bold">{{ 'event.buy_tickets.over'|trans|raw }}</p>
                {% endif %}
            </div>
        </div>
    </section>

{% endblock %}

    {% block additional_javascripts %}
        <script type="application/ld+json">
    {
      "@context": "http://schema.org",
      "@type": "Event",
      "name": "Un-Mute Festival",
      {% set firstdate = contract.festivalDates|first %}
      {% set lastdate = contract.festivalDates|last %}
      "startDate": "{{ firstdate|date('Y-m-d\\TH:i') }}",
      "endDate": "{{ lastdate|date('Y-m-d') }}T23:59",
      {% if not contract.hasNoDefinedHall %}
        {% set firsthall = contract.firstHall %}
      "location": {
        "@type": "Place",
        "name": "{{ firsthall.name }}",
        "address": {
          "@type": "PostalAddress",
          "streetAddress": "{{ firsthall.address.naturalStreet }}",
          "addressLocality": "{{ firsthall.address.city }}",
          "postalCode": "{{ firsthall.address.zipcode }}",
          "addressCountry": "{{ firsthall.address.country }}"
        }
      },
      {% endif %}
      "image": [
          "{{ og_src }}"
       ],
      "description": "{{ 'event.description'|trans({'%host%': artist.artistName})|raw }}",
      "offers": {
        "@type": "Offer",
        "url": "{{ url('artist_contract', {'id': contract.id, 'slug': artist.slug}) }}",
        "price": "{{ first_counterpart.price }}",
        "priceCurrency": "EUR",
        "availability": "{{ contract.soldOut ? "http://schema.org/OutOfStock" : "http://schema.org/InStock" }}",
        "validFrom": "{{ contract.startDate|date('Y-m-d') }}"
      },
      "performer": {
        "@type": "PerformingGroup",
        "name": "{{ artist }}"
      }
    }



        </script>
        <script type="text/javascript">
            $(document).ready(function () {
                var errorDiv = $('#user_reward-error');
                errorDiv.hide();
                $('.js-example-basic-multiple').select2();
                $('.user-rewards-select').on('select2:select select2:unselect', function () {
                    errorDiv.hide();
                    var haveReduction = false;
                    var select = $('.user-rewards-select');
                    select.find(':selected').each(function () {
                        if ($(this).hasClass('reduction')) {
                            if (haveReduction === true) {
                                errorDiv.show();
                                select.find(':selected').last().attr('selected', false).trigger('change');
                            } else {
                                haveReduction = true;
                            }
                        }
                    })
                })
            });

        </script>
    {% endblock %}
