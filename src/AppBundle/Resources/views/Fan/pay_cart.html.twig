{% extends "base.html.twig" %}

{% block body %}

    <h1>Payer le contenu du panier</h1>

    {% for contract in cart.contracts %}
        Contrat de fan #{{ contract.id }} : en lien avec le contrat d'artiste <a href="{{ path('user_see_contract', {'id': contract.contractArtist.id}) }}">#{{ contract.contractArtist.id }}</a>
        <br />
        Achats :
        <ul>
            {% for purchase in contract.purchases %}
                <li>{{ purchase.counterpart.name }} (quantité : {{ purchase.quantity }}, prix unitaire : {{ purchase.counterpart.price }} €)</li>
            {% endfor %}
        </ul>
    {% endfor %}

    {{ form(form) }}

{% endblock %}