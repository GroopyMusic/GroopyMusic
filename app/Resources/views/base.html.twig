<!DOCTYPE html>
<html lang="{{ app.request.locale }}">
    <head>
        <meta charset="UTF-8" />
        <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
        <meta name="description" content="{% block description %}{% block description_part_1 %}{{ 'meta_description_1'|trans }}{% endblock %} {% block description_part_2 %}{{ 'meta_description_2'|trans }}{% endblock %}{% endblock %}" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0" />
        <meta name="theme-color" content="#f08722">
        {% block additional_metas %}{% endblock %}

        <title>{% block headtitle %}Un-Mute{% endblock %}</title>
        {% block open_graph %}{% endblock %}
        <link rel="stylesheet" href="//code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css" />
        <link href="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.3/css/select2.min.css" rel="stylesheet" />
        {% block stylesheets %}
            {% include ':patterns:stylesheets.html.twig' %}
        {% endblock %}

        <link rel="icon" type="image/png" href="{{ asset('favicon.png') }}" />
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
    </head>
    <body {% block body_attributes %}{% endblock %}>
        {% if app.environment == 'prod' %}
            <!-- Google Tag Manager (noscript) -->
            <noscript><iframe src="https://www.googletagmanager.com/ns.html?id=GTM-KFPJV6V"
                              height="0" width="0" style="display:none;visibility:hidden"></iframe></noscript>
            <!-- End Google Tag Manager (noscript) -->
        {% endif %}
        <header id="header">
            <noscript>
                <div class="noscript-warning">
                    {{ "noscript.warning"|trans }}
                </div>
            </noscript>
            <!--[if lte IE 8]>
                <div class="noscript-warning">
                    {{ "ie.warning"|trans }}
                </div>
            <![endif]-->
            {% block header %}
                {% include ':patterns:header_nav.html.twig' with {'home_header': false} %}
            {% endblock %}
        </header>

        <main id="main" {% block main_attributes %}{% endblock %}>
            {% block modal_login_form %}
                {% if not is_granted('IS_AUTHENTICATED_REMEMBERED') %}
                    {% include '@FOSUser/Security/login_content.html.twig' %}
                {% endif %}
            {% endblock %}

            {% block flashes %}
                {% include ":patterns:notices.html.twig" %}
            {% endblock %}

            {% block errors %}
                {% include ":patterns:errors.html.twig" %}
            {% endblock %}

            {% block infos %}
                {% include ":patterns:infos.html.twig" %}
            {% endblock %}

            {% block body %}{% endblock %}
            {% block js_vars %}{% endblock %}
        </main>


        {% block footer %}
            <footer {% block footer_attributes %}class="footer pt-3"{% endblock %}>
                <div class="footer-links mb-4 row text-center">
                    <div class="col-xs-12 col-sm-3"><a href="{{ path('about') }}">{{ 'footer.about'|trans }}</a></div>
                    <div class="col-xs-12 col-sm-3"><a href="{{ path('conditions') }}">{{ 'footer.conditions'|trans }}</a></div>
                    <div class="col-xs-12 col-sm-3"><a href="{{ path('suggestionBox') }}">{{ 'footer.contact'|trans }}</a></div>
                    <div class="col-xs-12 col-sm-3"><a href="{{ path('press') }}">{{ 'footer.press'|trans }}</a></div>
                </div>
                <div class="copyright row">
                    <span class="text-uppercase">Â© Un-Mute <a href="{{ facebook_page_url }}"><img class="ml-2" height="20" src="{{ asset('images/facebook.jpg') }}" /></a></span>
                </div>
                <div class="row">
                    <div class="col-12 text-center">
                        <a href="{{ url('yb_index') }}">Powered by Ticked-it!</a>
                    </div>
                </div>

            </footer>
        {% endblock %}

        {% block javascripts %}
            {% include 'patterns/javascripts.html.twig' %}
            {% if app.environment == 'prod' %}

                <!-- Google Tag Manager -->
                <script>(function(w,d,s,l,i){w[l]=w[l]||[];w[l].push({'gtm.start':
                        new Date().getTime(),event:'gtm.js'});var f=d.getElementsByTagName(s)[0],
                        j=d.createElement(s),dl=l!='dataLayer'?'&l='+l:'';j.async=true;j.src=
                        'https://www.googletagmanager.com/gtm.js?id='+i+dl;f.parentNode.insertBefore(j,f);
                    })(window,document,'script','dataLayer','GTM-KFPJV6V');</script>
                <!-- End Google Tag Manager -->

                <!-- Global site tag (gtag.js) - Google Analytics -->
                <script async src="https://www.googletagmanager.com/gtag/js?id=UA-109142671-1"></script>
                <script>
                    window.dataLayer = window.dataLayer || [];
                    function gtag(){dataLayer.push(arguments);}
                    gtag('js', new Date());

                    gtag('config', 'UA-109142671-1');
                </script>
            {% endif %}
            {% block additional_javascripts %}{% endblock %}
        {% endblock %}

    </body>
</html>
